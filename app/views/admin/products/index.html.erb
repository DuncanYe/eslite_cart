<table class="table table-hover">
  <%= link_to '新增商品', new_admin_product_path, class: "btn btn btn-primary" %>
  <thead>
    <tr>
      <th>商品名稱</th>
      <th>原價</th>
      <th>售價</th>
      <th>SKU</th>
      <th>商品狀態</th>
      <th>編輯</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.original_price %></td>
      <td><%= product.sell_price %></td>
      <td><%= product.sku %></td>
      <td><%= product.state %></td>
      <td>
        <%= link_to '編輯', edit_admin_product_path(product), class: "btn btn-xs btn-default" %>
        <%= link_to '刪除', admin_product_path(product), method: "delete", data: { confirm: "確定刪除?" }, class: "btn btn-xs btn-default" %>
      </td>
    </tr>
    <% end %>
  </tbody>

</table>